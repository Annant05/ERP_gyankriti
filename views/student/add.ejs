<body class="nav-md">
<div class="container body">
    <% include ../partials/menuandtopnav.ejs %>

    <!-- Form Start -->
    <div class="right_col" role="main">
        <div class="x_panel">
            <div class="x_title">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Admission</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                            </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="x_content">

                    <!--TODO: Create a new dynamic form UI that displays generated roll no in real time using name and last name, with that checks for username availability -->

                    <form id="stud_details" data-parsley-validate="" method="post"
                          class="form-horizontal form-label-left" novalidate="">


                        <!-- Smart Wizard -->
                        <div id="wizard" class="form_wizard wizard_horizontal">
                            <ul class="wizard_steps">
                                <li>
                                    <a href="#step-1">
                                        <span class="step_no">1</span>
                                        <span class="step_descr">
                                              Step 1<br/>
                                              <small>Student Details</small>
                                          </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-2">
                                        <span class="step_no">2</span>
                                        <span class="step_descr">
                                              Step 2<br/>
                                              <small>Father's Detail</small>
                                          </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-3">
                                        <span class="step_no">3</span>
                                        <span class="step_descr">
                                              Step 3<br/>
                                              <small>Father's Detail</small>
                                          </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-4">
                                        <span class="step_no">4</span>
                                        <span class="step_descr">
                                              Step 4<br/>
                                              <small>Admission Details</small>
                                          </span>
                                    </a>
                                </li>
                            </ul>


                            <div id="step-1">
                                <!-- Student details form end -->
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">First
                                        Name <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="text" id="student-first-name"
                                               class="form-control col-md-7 col-xs-12"
                                               name="student[firstname]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Last
                                        Name <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4ERP_gyankriti col-sm-4 col-xs-12">
                                        <input type="text" id="student-last-name"
                                               class="form-control col-md-7 col-xs-12"
                                               name="student[lastname]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Gender * </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <p>
                                            Male : <input type="radio" class="flat" name="student[gender]"
                                                          id="genderM"
                                                          value="male"
                                                          title="male"/>
                                            Female : <input type="radio" class="flat" name="student[gender]"
                                                            id="genderF"
                                                            value="female" title="female"/>
                                        </p>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">DOB *</label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="date" class="col-md-7  col-sm-7 col-xs-12 no-spinner"
                                               name="student[dob]" required>
                                    </div>
                                </div>
                                <!-- Student details form end -->
                            </div>

                            <div id="step-2">
                                <!-- Father's Detail -->
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="full-name">Name<span
                                                class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="text" id="father-name"
                                               class="form-control col-md-7 col-xs-12"
                                               name="father[name]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Email
                                        address <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="email" id="father-email"
                                               class="form-control col-md-7 col-xs-12"
                                               name="father[email]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="mobile-no">Mobile
                                        No <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="text" maxlength="10" minlength="10"
                                               id="father-mobile"
                                               class="form-control col-md-7 col-xs-12" name="father[mobile]"
                                               required>
                                    </div>

                                </div>
                                <!-- end Father Detail -->
                            </div>

                            <div id="step-3">
                                <!-- Mother's Detail -->
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="mother-name">Name <span
                                                class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="text" id="mother-name"
                                               class="form-control col-md-7 col-xs-12"
                                               name="mother[name]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="last-name">Email
                                        address <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="email" id="mother-email"
                                               class="form-control col-md-7 col-xs-12"
                                               name="mother[email]" required>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="mobile-no">Mobile
                                        No <span class="required">*</span>
                                    </label>
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <input type="text" maxlength="10" minlength="10"
                                               id="mother-mobile"
                                               class="form-control col-md-7 col-xs-12" name="mother[mobile]"
                                               required>
                                    </div>
                                </div>
                                <!-- end Mother Detail -->
                            </div>

                            <div id="step-4">
                                <h2 class="StepTitle">Step 4 Content</h2>
                                <p>
                                    show all the data along with autogenerated data.
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Form End -->
                <!-- End SmartWizard Content -->
            </div>
        </div>
    </div>
</div>

