<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <style type="text/css">
        .dataTables_filter, .dataTables_info {
            display: none;
        }

    </style>

</head>
<body class="nav-md">
<div class="container body">
    <% include partials/menuandtopnav.ejs %>

    <div class="right_col" role="main">
        <div class="x_panel">

            <div class="page-title">
                <div class="title_left">
                    <h3>Students</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button"
                              onclick="alert('searching fucntion under development');">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>
            <!--page content start -->

            <!--Table show start -->
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                   cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Enrollment</th>
                    <th>Username</th>
                    <th>Standard</th>
                    <th>Bus Route</th>
                    <th>Father's Contact</th>
                    <th>Mother's Contact</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>

                <% for (let item of items) { %>
                <tr role="row">
                    <td><%= item.rollno.S %></td>
                    <td><%= item.name.S + " " + item.stud_last_name.S %></td>
                    <td><%= item.s_gender.S %></td>
                    <td><%= item.s_dob.S %></td>
                    <td><%= item.father_name.S %></td>
                    <td><%= item.mother_name.S %></td>
                    <td class=""><%= item.mother_name.S %></td>
                    <td class=" last">
                        <a onclick="alert('Under Development');" id="viewbutton" type="button">View</a>
                    </td>
                </tr>
                <% } %>
                <!-- Dynamically show data end here-->
                </tbody>
            </table>
        </div>
        <!--Table show start -->
        <!-- page content end -->
    </div>
</div>
<% include partials/jscripts.ejs %>
</body>
</html>
